@model IEnumerable<Student>  
  
@{  
    ViewData["Title"] = "Index";  
}  
  
<h2>Index</h2>  
  
<p>  
    <a asp-action="Create">Create New</a>  
</p>  
<table class="table">  
    <thead>  
        <tr>  
                <th>  
                    @Html.DisplayNameFor(model => model.Student_Name)  
                </th>  
                <th>  
                    @Html.DisplayNameFor(model => model.Department_Id)  
                </th>  
                <th>  
                    @Html.DisplayNameFor(model => model.Gender)  
                </th>  
                <th>  
                    @Html.DisplayNameFor(model => model.Email_Id)  
                </th>  
            <th></th>  
        </tr>  
    </thead>  
    <tbody>  
@foreach (var item in Model) {  
        <tr>  
            <td>  
                @Html.DisplayFor(modelItem => item.Student_Name)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.Department_Id)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.Gender)  
            </td>  
            <td>  
                @Html.DisplayFor(modelItem => item.Email_Id)  
            </td>  
            <td>  
                <a asp-action="Edit" asp-route-id="@item.Student_Id">Edit</a> |  
                <a asp-action="Details" asp-route-id="@item.Student_Id">Details</a> |  
                <a asp-action="Delete" asp-route-id="@item.Student_Id">Delete</a>  
            </td>  
        </tr>  
}  
    </tbody>  
</table>  